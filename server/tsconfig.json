{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "types": ["jest", "node"],
    
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    
    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",
    
    /* Others */
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}